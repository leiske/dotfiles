# vim:ft=bash

function jira() {
    export TMP_FILE=$(mktemp)
    nvim "+0r ~/.config/jira_template.md" +3 $TMP_FILE
    export jiraFmt=$(cat $TMP_FILE | pandoc -f markdown -t textile)

    # only copy to clipboard if it is not an empty string
    if [ -n "$jiraFmt" ]; then
        echo $jiraFmt | pbcopy
        echo "Copied to clipboard. Don't forget to make sure it is a Story, not a Request."
    fi
}

# ghpr goes here
function ghpr() {
  GH_FORCE_TTY=100% gh pr list --limit 300 |
  fzf --ansi --preview 'GH_FORCE_TTY=100% gh pr view {1}' --preview-window 'down,70%' --header-lines 3 |
  awk '{print $1}' |
  xargs gh pr checkout -f;
}

function watch() {
  local root_dir=~/src/client-lib-js
  local pkg="$1"
  if [ -z "$pkg" ]; then
    echo "Usage: watch <package>"
    return 1
  fi

  cd $root_dir || return 1
  make run-adhoc ARGS="npx jest --config packages/$pkg/jest.config.js --watch"
}

function sha256() {
  if [ -z "$1" ]; then
    echo "Usage: sha256 <text>"
    return 1
  fi

  echo -n "$1" | shasum -a 256 | awk '{print $1}'
}

source <(fzf --zsh)
